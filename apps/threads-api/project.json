{
  "name": "threads-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/threads-api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "dev": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "threads-api:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "threads-api:build:development"
        },
        "production": {
          "buildTarget": "threads-api:build:production"
        }
      }
    },
    "spin-db": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose up -d threads-database"
      }
    },
    "build-function": {
      "executor": "@nx/webpack:webpack",
      "options": {
        "webpackConfig": "apps/threads-api/webpack.vercel.config.js",
        "outputPath": "dist/api"
      }
    },
    "link": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-function"],
      "options": {
        "commands": [
          {
            "command": "vercel login",
            "cwd": "apps/threads-api"
          },
          {
            "command": "vercel link --yes --project threads-api",
            "cwd": "apps/threads-api"
          }
        ],
        "parallel": false
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["link"],
      "defaultConfiguration": "development",
      "options": {
        "command": "vercel dev",
        "cwd": "apps/threads-api"
      },
      "configurations": {
        "production": {
          "command": "vercel --prod",
          "cwd": "apps/threads-api"
        }
      }
    }
  }
}
